<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_menu_app"
android:layout_width="match_parent"
android:layout_height="match_parent"

tools:context="info.androidhive.firebase.MenuApp2Activity"
    >
<ImageView
    android:id="@+id/main_backgroundImage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:scaleType="centerCrop"

    android:src="@drawable/cafe" />


<TextView

    android:id="@+id/title"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:textColor="@color/black_overlay"
    android:textSize="18sp"
    android:textStyle="bold"
    android:layout_marginTop="20dp"
    android:lines="2"
    android:text="Bienvenido a la cafeterÃ­a RenesCoffe "
    android:layout_centerHorizontal="true"/>

<LinearLayout
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:layout_below="@+id/title"
    android:orientation="vertical">
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="0.5">

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/connection_info_container"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Ventas"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_centerInParent="true"
            android:background="@drawable/rounded_border" />

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/daily_info_button"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Ayuda"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:background="@drawable/rounded_border"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/configuracion"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Configuracion usuario"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:background="@drawable/rounded_border"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </LinearLayout>
</LinearLayout>

</RelativeLayout>
